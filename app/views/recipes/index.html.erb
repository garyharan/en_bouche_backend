<p class="text-green-500"><%= notice %></p>

<h1 class="text-3xl font-bold mb-4">Recipes</h1>

<div id="recipes" class="">
  <% if @recipes.empty? %>
    <p class="p-5">No recipes yet.</p>
  <% end %>

  <% @recipes.each do |recipe| %>
  <div class="flex">
    <div class="w-1/2">
      <h2 class="text-2xl font-bold mb-2"><%= recipe.name %></h2>
      <p class="text-lg mb-4"><%= recipe.ingredients.map(&:name).join(", ") %></p>
    </div>
    <div class="w-1/2">
      <%= link_to "Show this recipe", recipe, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>
  <% end %>
</div>

<div>
  <%= link_to "New recipe", new_recipe_path, class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded mt-10" %>
</div>
